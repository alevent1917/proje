@model OgrenciKarneLocal.Models.Student

@{
    ViewData["Title"] = "Not Girişi";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Başlık -->
            <h1 class="text-primary mb-4">
                <i class="bi bi-pencil-square me-2"></i>Not Girişi
            </h1>

            <!-- Öğrenci Bilgi Kartı -->
            <div class="card shadow mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Öğrenci Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Ad Soyad:</strong></p>
                            <p class="text-muted">@Model.Ad @Model.Soyad</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Öğrenci No:</strong></p>
                            <p><span class="badge bg-primary fs-6">@Model.Numara</span></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Not Giriş Formu -->
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-journal-check me-2"></i>Not Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Gizli Alanlar -->
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Ad" />
                        <input type="hidden" asp-for="Soyad" />
                        <input type="hidden" asp-for="Numara" />

                        <!-- Matematik Notu -->
                        <div class="mb-3">
                            <label asp-for="MatematikNotu" class="form-label">
                                <i class="bi bi-calculator me-1"></i>Matematik Notu
                            </label>
                            <div class="input-group">
                                <input asp-for="MatematikNotu" type="number" min="0" max="100" 
                                       class="form-control form-control-lg" placeholder="0-100 arası" />
                                <span class="input-group-text">/100</span>
                            </div>
                            <span asp-validation-for="MatematikNotu" class="text-danger"></span>
                            <div class="form-text">0-100 arasında bir değer girin.</div>
                        </div>

                        <!-- Türkçe Notu -->
                        <div class="mb-4">
                            <label asp-for="TurkceNotu" class="form-label">
                                <i class="bi bi-book me-1"></i>Türkçe Notu
                            </label>
                            <div class="input-group">
                                <input asp-for="TurkceNotu" type="number" min="0" max="100" 
                                       class="form-control form-control-lg" placeholder="0-100 arası" />
                                <span class="input-group-text">/100</span>
                            </div>
                            <span asp-validation-for="TurkceNotu" class="text-danger"></span>
                            <div class="form-text">0-100 arasında bir değer girin.</div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save me-2"></i>Notları Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bilgi Notu -->
            <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Dikkat:</strong> Notlar 0-100 arasında olmalıdır. 50 ve üzeri geçer not sayılır.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
