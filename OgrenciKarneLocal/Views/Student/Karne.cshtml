@model OgrenciKarneLocal.Models.Student

@{
    ViewData["Title"] = "Karne";
    
    // Controller'dan gelen veriler
    double ortalama = ViewBag.Ortalama;
    string sonuc = ViewBag.Sonuc;
    bool gectiMi = ViewBag.GectiMi;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Başlık -->
            <h1 class="text-primary mb-4 text-center">
                <i class="bi bi-file-earmark-text me-2"></i>Öğrenci Karnesi
            </h1>

            <!-- Karne Kartı -->
            <div class="card shadow-lg border-0">
                <!-- Karne Başlığı -->
                <div class="card-header bg-gradient @(gectiMi ? "bg-success" : "bg-danger") text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-award me-2"></i>KARNE
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">2024-2025 Eğitim Öğretim Yılı</p>
                </div>

                <div class="card-body p-4">
                    <!-- Öğrenci Bilgileri -->
                    <div class="text-center mb-4 pb-3 border-bottom">
                        <h3 class="text-dark mb-2">
                            <i class="bi bi-person-circle me-2"></i>@Model.Ad @Model.Soyad
                        </h3>
                        <span class="badge bg-primary fs-5 px-4 py-2">
                            <i class="bi bi-123 me-2"></i>No: @Model.Numara
                        </span>
                    </div>

                    <!-- Ders Notları -->
                    <div class="row mb-4">
                        <!-- Matematik Notu -->
                        <div class="col-6">
                            <div class="card h-100 @(Model.MatematikNotu >= 50 ? "border-success" : "border-danger")">
                                <div class="card-body text-center">
                                    <i class="bi bi-calculator fs-1 @(Model.MatematikNotu >= 50 ? "text-success" : "text-danger")"></i>
                                    <h5 class="card-title mt-2">Matematik</h5>
                                    <p class="card-text display-4 fw-bold @(Model.MatematikNotu >= 50 ? "text-success" : "text-danger")">
                                        @Model.MatematikNotu
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Türkçe Notu -->
                        <div class="col-6">
                            <div class="card h-100 @(Model.TurkceNotu >= 50 ? "border-success" : "border-danger")">
                                <div class="card-body text-center">
                                    <i class="bi bi-book fs-1 @(Model.TurkceNotu >= 50 ? "text-success" : "text-danger")"></i>
                                    <h5 class="card-title mt-2">Türkçe</h5>
                                    <p class="card-text display-4 fw-bold @(Model.TurkceNotu >= 50 ? "text-success" : "text-danger")">
                                        @Model.TurkceNotu
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ortalama -->
                    <div class="text-center mb-4 p-3 rounded @(gectiMi ? "bg-success bg-opacity-10" : "bg-danger bg-opacity-10")">
                        <h4 class="text-muted mb-2">
                            <i class="bi bi-bar-chart-line me-2"></i>Genel Ortalama
                        </h4>
                        <p class="display-3 fw-bold @(gectiMi ? "text-success" : "text-danger") mb-0">
                            @ortalama.ToString("F2")
                        </p>
                    </div>

                    <!-- Sonuç -->
                    <div class="text-center p-4 rounded @(gectiMi ? "bg-success" : "bg-danger") text-white">
                        @if (gectiMi)
                        {
                            <i class="bi bi-check-circle-fill display-3"></i>
                            <h2 class="mt-3 mb-0">GEÇTİ</h2>
                            <p class="mt-2 mb-0">Tebrikler! Başarıyla geçtiniz.</p>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill display-3"></i>
                            <h2 class="mt-3 mb-0">KALDI</h2>
                            <p class="mt-2 mb-0">Maalesef başarısız oldunuz.</p>
                        }
                    </div>
                </div>

                <!-- Karne Altbilgi -->
                <div class="card-footer text-center text-muted py-3">
                    <small>
                        <i class="bi bi-calendar3 me-2"></i>
                        Tarih: @DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                    </small>
                </div>
            </div>

            <!-- Butonlar -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Listeye Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                    <i class="bi bi-pencil me-2"></i>Notları Düzenle
                </a>
                <button onclick="window.print();" class="btn btn-secondary btn-lg">
                    <i class="bi bi-printer me-2"></i>Yazdır
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<style>
    @@media print {
        .btn, nav, footer {
            display: none !important;
        }
    }
</style>
