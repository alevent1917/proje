@model IEnumerable<OgrenciKarneLocal.Models.Student>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="container mt-4">
    <!-- Başlık ve Yeni Öğrenci Butonu -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">
            <i class="bi bi-people-fill me-2"></i>Öğrenci Listesi
        </h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Yeni Öğrenci Ekle
        </a>
    </div>

    <!-- Başarı Mesajı -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <!-- Öğrenci Tablosu -->
    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-table me-2"></i>Kayıtlı Öğrenciler</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Soyad</th>
                            <th scope="col">Numara</th>
                            <th scope="col" class="text-center">Matematik</th>
                            <th scope="col" class="text-center">Türkçe</th>
                            <th scope="col" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Ad</td>
                                <td>@item.Soyad</td>
                                <td><span class="badge bg-secondary">@item.Numara</span></td>
                                <td class="text-center">
                                    <span class="badge @(item.MatematikNotu >= 50 ? "bg-success" : "bg-danger")">
                                        @item.MatematikNotu
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @(item.TurkceNotu >= 50 ? "bg-success" : "bg-danger")">
                                        @item.TurkceNotu
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-warning btn-sm" title="Not Gir">
                                            <i class="bi bi-pencil-square"></i> Not Gir
                                        </a>
                                        <a asp-action="Karne" asp-route-id="@item.Id" 
                                           class="btn btn-info btn-sm text-white" title="Karne Görüntüle">
                                            <i class="bi bi-file-earmark-text"></i> Karne
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-muted">
                Toplam: @Model.Count() öğrenci
            </div>
        </div>
    }
    else
    {
        <!-- Öğrenci yoksa uyarı göster -->
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            Henüz kayıtlı öğrenci bulunmamaktadır.
            <a asp-action="Create" class="alert-link">Yeni öğrenci eklemek için tıklayın.</a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
