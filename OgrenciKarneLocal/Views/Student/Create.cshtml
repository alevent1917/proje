@model OgrenciKarneLocal.Models.Student

@{
    ViewData["Title"] = "Yeni Öğrenci Kayıt";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Başlık -->
            <h1 class="text-primary mb-4">
                <i class="bi bi-person-plus-fill me-2"></i>Yeni Öğrenci Kayıt
            </h1>

            <!-- Kayıt Formu -->
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-plus me-2"></i>Öğrenci Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Ad Alanı -->
                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label">
                                <i class="bi bi-person me-1"></i>Ad
                            </label>
                            <input asp-for="Ad" class="form-control form-control-lg" 
                                   placeholder="Öğrencinin adını girin" autocomplete="off" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <!-- Soyad Alanı -->
                        <div class="mb-3">
                            <label asp-for="Soyad" class="form-label">
                                <i class="bi bi-person me-1"></i>Soyad
                            </label>
                            <input asp-for="Soyad" class="form-control form-control-lg" 
                                   placeholder="Öğrencinin soyadını girin" autocomplete="off" />
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>

                        <!-- Numara Alanı -->
                        <div class="mb-4">
                            <label asp-for="Numara" class="form-label">
                                <i class="bi bi-123 me-1"></i>Öğrenci Numarası
                            </label>
                            <input asp-for="Numara" class="form-control form-control-lg" 
                                   placeholder="Öğrenci numarasını girin" autocomplete="off" />
                            <span asp-validation-for="Numara" class="text-danger"></span>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bilgi Notu -->
            <div class="alert alert-info mt-3" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Not:</strong> Öğrenci notları daha sonra "Not Gir" butonu ile eklenebilir.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
