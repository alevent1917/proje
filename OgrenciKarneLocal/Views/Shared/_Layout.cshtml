<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Karne Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OgrenciKarneLocal.styles.css" asp-append-version="true" />
    <style>
        /* Özel stiller */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
        }
        .nav-link {
            font-weight: 500;
        }
        .nav-link:hover {
            color: #0d6efd !important;
        }
        body {
            background-color: #f5f7fa;
        }
        .card {
            border-radius: 12px;
        }
        .btn {
            border-radius: 8px;
        }
        footer {
            background-color: #fff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Student" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2"></i>Öğrenci Karne Sistemi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i>Öğrenci Listesi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Student" asp-action="Create">
                                <i class="bi bi-person-plus-fill me-1"></i>Yeni Kayıt
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3">
        <div class="container text-center">
            <i class="bi bi-code-slash me-1"></i>
            &copy; 2025 - Öğrenci Karne Sistemi | ASP.NET MVC + Entity Framework Core
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
